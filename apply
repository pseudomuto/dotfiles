#!/usr/bin/env bash
set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Logging functions - exported for child scripts
log_info() {
  echo -e "${GREEN}[INFO]${NC} $1"
}

log_warn() {
  echo -e "${YELLOW}[WARN]${NC} $1"
}

log_error() {
  echo -e "${RED}[ERROR]${NC} $1"
}

# Export logging functions and colors for child scripts
export -f log_info log_warn log_error
export RED GREEN YELLOW NC

show_help() {
  cat <<EOF
Usage: $0 [OPTIONS]

Apply dotfiles configuration using Nix flakes.

OPTIONS:
    --refresh, --force    Force update of Nix channels and flake inputs
    --help, -h           Show this help message

This script is idempotent and safe to run multiple times.
EOF
}

main() {
  log_info "Starting dotfiles configuration..."

  # Parse command line arguments
  local force_refresh=false
  while [[ $# -gt 0 ]]; do
    case $1 in
    --refresh | --force)
      force_refresh=true
      export FORCE_REFRESH=true
      log_info "Force refresh mode enabled"
      shift
      ;;
    --help | -h)
      show_help
      exit 0
      ;;
    *)
      log_error "Unknown option: $1"
      show_help
      exit 1
      ;;
    esac
  done

  # Get script directory
  SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
  export DOTFILES_DIR="$SCRIPT_DIR"

  # Check if running from the dotfiles directory
  if [ ! -f "${SCRIPT_DIR}/flake.nix" ]; then
    log_error "This script must be run from the dotfiles directory"
    log_error "Current directory: $(pwd)"
    exit 1
  fi

  # Symlink home.nix to the expected location for Home Manager
  log_info "Setting up personal configuration..."
  mkdir -p "${HOME}/.config/home-manager"
  if [ -f "${SCRIPT_DIR}/home.nix" ]; then
    ln -sf "${SCRIPT_DIR}/home.nix" "${HOME}/.config/home-manager/home.nix"
    log_info "Linked personal configuration: ~/.config/home-manager/home.nix -> ${SCRIPT_DIR}/home.nix"
  else
    log_warn "No home.nix found in ${SCRIPT_DIR}, skipping personal configuration"
  fi

  # Run installation steps in sequence
  log_info "Step 1/4: Installing/updating Nix..."
  #"${SCRIPT_DIR}/install/nix"

  log_info "Step 2/4: Setting up Nix configuration..."
  #"${SCRIPT_DIR}/install/init"

  log_info "Step 3/4: Updating flake inputs..."
  #"${SCRIPT_DIR}/install/flake"

  log_info "Step 4/4: Applying system configuration..."
  "${SCRIPT_DIR}/install/configure"

  log_info "Configuration complete!"
  log_info ""
  log_info "Next steps:"
  log_info "  1. Restart your shell to ensure all changes take effect"
  log_info "  2. Run 'nix flake check' to verify the configuration"
  log_info "  3. Customize modules in the 'modules/' directory"
}

# Run main function
main "$@"
