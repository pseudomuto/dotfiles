export EDITOR=vim

export PATH="./bin:./vendor/bin:${HOME}/bin:/usr/local/bin:/usr/bin:/usr/sbin:/bin:${PATH}"

### GCloud
export PATH="/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/bin:${PATH}"

### GPG
export GPG_TTY=$(tty)

### Ruby
export PATH="/usr/local/opt/ruby/bin:${PATH}"

### Go
export GOPATH="${HOME}"
export PATH="${GOPATH}/bin:${PATH}"

### FZF
export FZF_DEFAULT_COMMAND='ag --hidden -g ""'

### OpenSSL Headers should use Brew
if which brew >/dev/null; then
  export OPENSSL_INCLUDE_DIR=`brew --prefix openssl`/include
  export OPENSSL_LIB_DIR=`brew --prefix openssl`/lib
  export DEP_OPENSSL_INCLUDE=`brew --prefix openssl`/include
fi

# cloudplatform: add Shopify clusters to your local kubernetes config
export KUBECONFIG=${KUBECONFIG:+$KUBECONFIG:}${HOME}/.kube/config:${HOME}/.kube/config.shopify.cloudplatform

if [ -f /usr/local/share/kube-ps1.sh ]; then
  PROMPT='$(kube_ps1)'$PROMPT
fi
