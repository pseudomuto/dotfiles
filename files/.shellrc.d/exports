### Go
if [[ $OSTYPE == darwin* ]]; then
  export GOPATH="$HOME/go"
  export PATH="$GOPATH/bin:$PATH"
fi

### Bin Paths
BINPATH="./bin:./vendor/bin:$HOME/bin:/usr/local/bin:/usr/local/heroku/bin:/usr/bin:/usr/sbin:/bin"
ANDROID="$HOME/Code/android-sdk/tools:$HOME/Code/android-sdk/platform-tools"
export PATH="$BINPATH:$ANDROID:$PATH"

export EDITOR=vim

### Shopify Things
export PRY=1
export VAGRANT_DEFAULT_PROVIDER="vmware_fusion"
[ -f "/usr/libexec/java_home" ] && export JAVA_HOME=`/usr/libexec/java_home -v 1.8`
export WORKON_HOME=~/.virtualenvs
