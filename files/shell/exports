export PATH="${HOME}/bin:${HOME}/.cargo/bin:${HOME}/.nix-profile/bin:${PATH}"

export EDITOR=vim
export EJSON_KEYDIR="${HOME}/.config/ejson"
export FZF_DEFAULT_COMMAND='ag --hidden -g ""'
export GOPATH="${HOME}"
export KUBECONFIG=${KUBECONFIG:+$KUBECONFIG:}${HOME}/.kube/config
export NIX_PATH="${HOME}/.nix-defexpr/channels:/nix/var/nix/profiles/per-user/root/channels${NIX_PATH:+:$NIX_PATH}"
export RIPGREP_CONFIG_PATH="${HOME}/.config/ripgrep/config"
export XDG_CONFIG_HOME="${HOME}/.config"

export NVM_DIR="${XDG_CONFIG_HOME}/nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && . "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# For M1 Macs...I guess Linux too, but no brew on Linux for me.
# For non-M1s, the path is /usr/local/bin, which is already in
# the path.
if [ -d /opt/homebrew ]; then
  export PATH="${PATH}:/opt/homebrew/bin"
fi
